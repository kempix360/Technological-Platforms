<Window x:Class="laboratory_10.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Car" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Model:"/>
            <TextBox x:Name="ModelTextBox"/>
            <TextBlock Text="Engine Model:"/>
            <TextBox x:Name="EngineModelTextBox"/>
            <TextBlock Text="Displacement:"/>
            <TextBox x:Name="DisplacementTextBox"/>
            <TextBlock Text="Horse Power:"/>
            <TextBox x:Name="HorsePowerTextBox"/>
            <TextBlock Text="Year:"/>
            <TextBox x:Name="YearTextBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>